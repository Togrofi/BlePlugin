<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android"
        id="cordova-plugin-bleplugin" version="0.0.1">
    <name>BlePlugin</name>

    <license>MIT</license>

    <repo>https://github.com/stanidesis/toastyplugin/Toast-PhoneGap-Plugin.git</repo>
  
    <engines>
        <engine name="cordova" version=">=3.0.0"/>
    </engines>
  
    <js-module src="www/bleplugin.js" name="blePlugin">
        <clobbers target="window.plugins.blePlugin" />
    </js-module>
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="BlePlugin">
                <param name="android-package" value="com.stanleyidesis.cordova.plugin.ToastyPlugin"/>
            </feature>
        </config-file>

        <source-file src="src/android/BlePlugin.java" target-dir="src/com/stanleyidesis/cordova/plugin" />
    </platform>
</plugin>
